{
  "name": "html-structure-validator",
  "version": "1.1.0",
  "description": "Client side tool for checking syntax and structure of XML/HTML documents",
  "author": "Daniel Krueger",
  "scripts": {
    "dev:server": "webpack --config webpack.config.cjs --watch --env target=server & nodemon dist-server/server.cjs",
    "dev:client": "webpack serve --config webpack.config.cjs --mode development",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "webpack --config webpack.config.cjs --mode production",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist-server/server.cjs",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "parse5": "^7.1.2",
    "undici": "^6.19.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.41",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.10",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^5.10.0",
    "webpack-node-externals": "^3.0.0"
  }
}
